{% extends "base.html.twig" %}

{% block title %}Modifier une offre{% endblock %}

{% block stylesheets %}
    {{ encore_entry_link_tags('scss/form') }}
{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>Modifier une offre</h1>
        {% if offre.filename %}
        <img class="offrePic" src={{ vich_uploader_asset(offre, 'imageFile')}}>
        {% else %}
        <img class="offrePic" src={{ asset ('img/default-pic.png')}}>
        {% endif %}
        {{ include ("pages/offres/offreForm.html.twig", {form: form, button: 'Modifier'}) }}
    </div>

{% endblock %}

